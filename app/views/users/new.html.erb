<div id="information">
	<h1>Creating new user</h1>
	
	<% @user.password = @user.password_confirmation = nil -%>
	
	<% form_for :user, :url => users_path do |f| %>
	<div id="actions">
		<%= f.submit 'Create' %> or <%= link_to 'Cancel', users_path, :class => 'action' %>
	</div>
</div>

<div id="content-with-sidebar" style="min-height: 0">
	<%= f.error_messages %>

	<p>
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</p>
	<p>
	  <%= f.label :login, 'Login name' %>
	  <%= f.text_field :login %>
	</p>
	<p>
	  <%= f.label :email, 'Email address' %>
	  <%= f.text_field :email %>
	</p>
	<p>
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	</p>
	<p>
	  <%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation %>
	</p>

	<p>
	  <%= f.submit "Create" %> or <%= link_to 'Cancel', users_path, :class => 'action' %>
	</p>
</div>

<% end %>